<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/palidhije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_news_image"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                tools:layout_alignParentTop="true"

                tools:src="@drawable/images" />
        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/card_news_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:text="News Title"
            android:layout_below="@id/palidhije"/>

        <TextView
            android:id="@+id/card_news_time"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="Today"
            android:layout_below="@+id/card_news_title"
            android:textColor="#808080" />
        <TextView
            android:id="@+id/ora"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="14:45"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_news_title"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/card_news_content"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            android:layout_below="@+id/ora"
            android:text="This is simple content This is simple content This is simple content This is simple content This is simple content This is simple content This is simple content This is simple content This is simple content This is simple content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>